<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style_header">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">26dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="main_activity_button" parent="Widget.Material3.Button.Icon">
        <item name="android:backgroundTint">?attr/iconBackGroundColorMainScreen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textColorMainScreen</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">?attr/iconColorMainScreen</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="tint">?attr/iconColor</item>
    </style>
</resources>