<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_activity_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
</resources>